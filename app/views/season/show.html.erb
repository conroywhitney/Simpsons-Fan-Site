<h1>*Simpsons - Season <%= @season %></h1>

<%= render :partial => "home/season_links" %>

<% if @episodes.nil? %>
    <h2>No Episodes Found</h2>
<% else %>
    <ul id="season-episodes">
    <% @episodes.each do |episode| %>
        <li class="episode yellow-box">
            <a href="<%= url_for :controller => "episodes",
                                 :action => "show",
                                 :id => episode %>"
               title="<%= episode.summary %>">
                <div id="episode_title">
                    <h3><%= episode.title %></h3>
                </div>

                <img src="<%= episode.thumbnail %>" class="episode-thumbnail" />

                <div class="clearfix"></div>

                <div class="season-label"><%= episode.season_label %></div>
            </a>

        </li>
    <% end %>
    </ul>
<% end %>